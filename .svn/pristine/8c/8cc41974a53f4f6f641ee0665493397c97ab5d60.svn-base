			<section id="section">
				<form action="" enctype="multipart/form-data"></form>
				<div id="wish_div" style="display: none;">
					<table class="table">
						<thead>
							<tr>
								<th colspan="4" > <span class="fas fa-star" style="color: #FFE400; font-size: 30px; margin-bottom: 20px;" ></span> 찜 리 스 트  <br />
							<input type="checkbox" id="check_all">
							<button id="delete_product" class="delete_button" style="color:#0064FF;">선택상품 삭제</button>
								</th>
							</tr>
							<tr>
							
							</tr>
						</thead>
						<tbody id="list">
						</tbody>
					</table>
					<hr>

					<div>
						<input type="checkbox" id="check_all2">
						<button id="delete_product1" class="delete_button" >선택상품 삭제</button>
